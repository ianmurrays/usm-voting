- cache "poll_results_#{poll.id}" do
  - poll.alternatives.each do |a|
    %p
      &rarr;
      = a.description
      \|
      %span
        = a.ballots.count
        - if poll.total_ballots > 0
          = "(#{number_with_precision(a.ballots.count.to_f / poll.total_ballots.to_f * 100.0, :precision => 2)}%)"
        - else
          (0%)

  %p 
    = poll.total_ballots
    votos emitidos.